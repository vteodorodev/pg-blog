<a href="/dashboard">&larr; Back</a>
<div class="admin-title">
    <h2>View / Edit Post</h2>

    <form action="/delete-post/<%= data.id %>?_method=DELETE" method="POST">
        <input type="submit" class="btn btn-delete" value="Delete">
    </form>

</div>
<form action="/edit-post/<%= data.id %>?_method=PUT" method="post">

    <label for="title"><b>Title</b></label>
    <input type="text" placeholder="Enter post title" name="title" value="<%= data.title %>">

    <label for="body"><b>Content</b></label>
    <textarea name="body" id="" cols="50" rows="10" ><%= data.body %></textarea>

    <input type="submit" class="btn" value="Update">
</form>